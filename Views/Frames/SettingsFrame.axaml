<UserControl
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:vmf="clr-namespace:Taggle.ViewModels.Frames"
	xmlns:ui="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
	mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
	x:Class="Taggle.Views.Frames.SettingsFrame"
	x:DataType="vmf:SettingsFrameViewModel">
	<StackPanel Orientation="Vertical">
		<ui:SettingsExpander Header="General" IconSource="Star" IsExpanded="True" FontFamily="Urbanist">
			<ui:SettingsExpanderItem>
				<StackPanel Orientation="Horizontal">
					<ui:SymbolIcon Symbol="DarkTheme" />
					<TextBlock
						FontFamily="Urbanist"
						Text="Dark-Mode"
						Margin="10, 0, 0, 0" />
				</StackPanel>
				<ui:SettingsExpanderItem.Footer>
					<ToggleSwitch
						IsChecked="{Binding IsDarkModeEnabled}"
						OffContent=""
						OnContent=""
						Width="40" />
				</ui:SettingsExpanderItem.Footer>
			</ui:SettingsExpanderItem>
		</ui:SettingsExpander>
	</StackPanel>
</UserControl>

